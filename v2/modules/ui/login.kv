Screen:
    MDCard:
        size_hint: None, None
        size: 300, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: "vertical"

        MDLabel:
            id: sign_in_label
            text: "Mastermind: Sign In"
            font_size: 40
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: username
            hint_text: "Username"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            hint_text: "Password"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "SIGN IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.logger()
            
        MDRoundFlatButton:
            text: "CREATE NEW ACCOUNT"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.create_account()
            
        
        MDRoundFlatButton:
            text: "CONTINUE WITHOUT SIGN IN / SIGN OUT"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.no_login()

    MDLabel:
        id: message_label
        text: ""
        font_size: 20
        halign: "center"
        size_hint_y: None
        height: self.texture_size[1]
        padding_y: 15
        text_colour: "red"